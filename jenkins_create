pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url:'https://github.com/davidathuil/INFRA-DEPLOY-AWS-JENKINS.git'
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                ansiblePlaybook(
                    playbook: '/etc/ansible/create_instance.yml',
                    inventory: 'localhost',
                    extras: '--private-key=/etc/ansible/key1.pem'
                )
            }
        }
    }
}
